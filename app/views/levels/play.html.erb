<% provide(:title, "Playing level \"#{@level.name}\"") %>

<div class="col s10 offset-s1">
  <%= render 'level_heading' %>

  <div class="col s8 offset-s2">
    <div class="row" id="stats-bar">
      <div class="col s6 center">Score: <span id="score">0</span></div>
      <div class="col s6 center">Lives: <san id="lives">3</span></div>
    </div>
    <canvas id="tutorial" width="1000" height="600"></canvas>
  </div>

  <%= javascript_include_tag level_path(@level, format: :js) %>
</div>
