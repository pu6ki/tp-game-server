<% provide(:title, "Playing level \"#{@level.name}\"") %>

<div class="col s10 offset-s1">
  <%= render 'level_heading' %>

  <div class="col s9">
    <canvas id="tutorial" width="1000" height="600"></canvas>
  </div>
      <div id="scores-panel" class="col s3 center">
        <div class="card-panel light-blue darken-2 white-text">
          <h4 id="score">Score: 0</h1>
          <h4 id="lives">Lives: 3</h1>
        </div>
      </div>

  <%= javascript_include_tag level_path(@level, format: :js) %>
</div>
